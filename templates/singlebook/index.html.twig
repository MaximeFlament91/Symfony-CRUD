{% extends 'base.html.twig' %}

{% block title %}Hello SinglebookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1 class="text-center text-muted mt-4 mb-4">Livre n°{{book.id}}</h1>
    <div class="container-fluid mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images p-3">
                                <div class="text-center p-4"><img id="main-image" src="{{ asset('uploads/pictures/' ~ book.picture) }}" alt="" width="300px" /></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product p-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center"><i class="fa fa-long-arrow'left"></i><span class="ml-1">{{book.author}}</span></div>
                                    <i class="fa fa-shopping-cart text-muted"></i>
                                </div>
                                <div class="mt-4 mb-3">
                                    <h5 class="text-uppercase">{{book.title}}</h5>
                                    <div class="price d-flex flex-row align-items-center"> <span class="act-price">{{book.createdAt |date('d/m/y')}}</span></div>
                                </div>
                                <p class="about">{{book.description}}</p>
                                <div class="cart mt-4 align-items-center">
                                <button class="btn btn-danger text-uppercase mr-2 px-4" data-bs-toggle="modal" data-bs-target="#exampleModal">Envoyer</button>
                            <button class="btn btn-danger text-uppercase mr-2 px-4">Supprimer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"> Attention action irréversible</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Voulez vous vraimnt supprimer ce livre?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
        <a href="{{path('app_singlebook_remove',{id:book.id})}}" type="button" class="btn btn-primary">Oui</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}
